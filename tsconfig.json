{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "target": "es5",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "lib": [
      "es2015",
      "dom"
    ],
    "baseUrl": "./",
    "paths": {
      "aire/*": [
        "src/main/*"
      ],
      "test/*": [
        "src/test/*"
      ]
    }
  },
  "filesGlob": [
    "./src/**/*.ts",
    "./test/**/*.ts",
    "./typings/index.d.ts",
    "./custom_typings/**/*.d.ts",
    "./jspm_packages/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "jspm_packages",
    "node_modules/@types/node",
    "dist",
    "build"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
